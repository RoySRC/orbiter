create:
	- rm -rf POV
	mkdir POV
	$(GEO_LOCATION_PATH)/target.out -v 2 ss\
		-output_mask $(FNAME_POV) \
		-rounds "6" \
		-nb_frames_default 90 \
		-video_options \
		-clipping_radius 190 \
		-W 2560 -H 1920 \
		-zoom 0 155 155 \
		-no_bottom_plane 0 \
		-camera 0 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 1 155 155 \
		-no_bottom_plane 1 \
		-camera 1 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 2 155 155 \
		-no_bottom_plane 2 \
		-camera 2 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 3 155 155 \
		-no_bottom_plane 3 \
		-camera 3 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 4 155 155 \
		-no_bottom_plane 4 \
		-camera 4 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 5 155 155 \
		-no_bottom_plane 5 \
		-camera 5 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-zoom 6 155 155 \
		-no_bottom_plane 6 \
		-camera 6 "<1,1,1>" "<-40+20,1+20,40+20>" "<25,25,25>" \
		-end
	mv *.pov POV
	mv makefile_animation POV


