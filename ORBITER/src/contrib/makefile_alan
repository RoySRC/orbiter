target1:
	- rm target1.mp4
	- rm -r FRAMES_TARGET
	- mkdir FRAMES_TARGET
	$(LOCAL_TOOLS_PATH)/prepare_frames.out \
		-i 0 90 PNG2/target_02_%03ld.png \
		-i 0 90 PNG3/target_03_%03ld.png \
		-i 0 90 PNG4/target_04_%03ld.png \
		-i 0 90 PNG5/target_05_%03ld.png \
		-i 0 90 PNG6/target_06_%03ld.png \
		-output_starts_at 0 \
		-o FRAMES_TARGET/frame%04d.png
	ffmpeg -r 15 -f image2 -i FRAMES_TARGET/frame%04d.png -f mp4 -q:v 0 -vcodec mpeg4  target1.mp4


