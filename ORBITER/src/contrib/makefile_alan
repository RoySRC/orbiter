prepare_poster:
	- rm -rf POSTER
	mkdir POSTER
	$(LOCAL_TOOLS_PATH)/prepare_frames.out \
		-i 0 45 HIGHRES/hilbert_72_%03ld.png \
		-output_starts_at 0 \
		-step 6 \
		-o POSTER/frame_%03d.png

