blt3:
	mkdir -p STARTER_DIR
	$(BLT_PATH)/blt_main.out -v 30 -BLT -q 3 -starter_size 5 \
		-input_prefix STARTER_DIR/ -output_prefix SYSTEMS/ \
		-solution_prefix SOLUTIONS/ -base_fname BLT_23 \
		-schreier 24 -starter



blt5:
	mkdir -p STARTER_DIR
	$(BLT_PATH)/blt_main.out -v 2 -BLT -q 5 -starter_size 5 \
		-input_prefix STARTER_DIR/ -output_prefix SYSTEMS/ \
		-solution_prefix SOLUTIONS/ -base_fname BLT_23 \
		-schreier 24 -starter

blt23:
	mkdir -p STARTER_DIR
	$(BLT_PATH)/blt_main.out -v 2 -BLT -q 23 -starter_size 5 \
		-input_prefix STARTER_DIR/ -output_prefix SYSTEMS/ \
		-solution_prefix SOLUTIONS/ -base_fname BLT_23 \
		-schreier 24 -starter \
		-draw_poset \
		-export_schreier_trees \
		-tools_path $(GRAPH_THEORY_PATH) \
		-report \
		-report_schreier_trees


long:
	$(ALGEBRA_PATH)/long_orbit.out -v 2 



