MY_PATH=../..
SRC=$(MY_PATH)/SRC2


DRAW_PATH=$(SRC)/DRAW




draw:
	$(DRAW_PATH)/draw_graph.out -fname graph_4_3_0 -nb_V 4 -E 0 1 2 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_4_3_1 -nb_V 4 -E 0 1 3 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_4_3_2 -nb_V 4 -E 0 1 4 -1
	mpost graph_4_3_0.mp
	mpost graph_4_3_1.mp
	mpost graph_4_3_2.mp
	cp graph_4_3_0.1 graph_4_3_0.eps
	cp graph_4_3_1.1 graph_4_3_1.eps
	cp graph_4_3_2.1 graph_4_3_2.eps
	/sw/bin/convert -density 300x300 -trim graph_4_3_0.eps graph_4_3_0.png
	/sw/bin/convert -density 300x300 -trim graph_4_3_1.eps graph_4_3_1.png
	/sw/bin/convert -density 300x300 -trim graph_4_3_2.eps graph_4_3_2.png

draw2:
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_0 -nb_V 8 -E 0 1 2 7 8 13 22 23 24 25 26 27 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_1 -nb_V 8 -E 0 1 2 7 8 14 19 23 24 25 26 27 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_2 -nb_V 8 -E 0 1 2 7 9 15 18 20 24 25 26 27 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_3 -nb_V 8 -E 0 1 2 7 9 15 20 21 23 24 25 26 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_4 -nb_V 8 -E 0 1 2 9 10 14 16 19 20 24 26 27 -1
	$(DRAW_PATH)/draw_graph.out -fname graph_8_r3_5 -nb_V 8 -E 0 1 2 9 10 14 16 19 21 24 25 27 -1
	mpost graph_8_r3_0.mp
	mpost graph_8_r3_1.mp
	mpost graph_8_r3_2.mp
	mpost graph_8_r3_3.mp
	mpost graph_8_r3_4.mp
	mpost graph_8_r3_5.mp
	cp graph_8_r3_0.1 graph_8_r3_0.eps
	cp graph_8_r3_1.1 graph_8_r3_1.eps
	cp graph_8_r3_2.1 graph_8_r3_2.eps
	cp graph_8_r3_3.1 graph_8_r3_3.eps
	cp graph_8_r3_4.1 graph_8_r3_4.eps
	cp graph_8_r3_5.1 graph_8_r3_5.eps
	/sw/bin/convert -density 300x300 -trim graph_8_r3_0.eps graph_8_r3_0.png
	/sw/bin/convert -density 300x300 -trim graph_8_r3_1.eps graph_8_r3_1.png
	/sw/bin/convert -density 300x300 -trim graph_8_r3_2.eps graph_8_r3_2.png
	/sw/bin/convert -density 300x300 -trim graph_8_r3_3.eps graph_8_r3_3.png
	/sw/bin/convert -density 300x300 -trim graph_8_r3_4.eps graph_8_r3_4.png
	/sw/bin/convert -density 300x300 -trim graph_8_r3_5.eps graph_8_r3_5.png


draw3:
	$(DRAW_PATH)/draw_graph.out -fname tournament_4_0 -directed -nb_V 4 -E 0 2 4 6 8 10 -1
	$(DRAW_PATH)/draw_graph.out -fname tournament_4_1 -directed -nb_V 4 -E 0 2 4 6 9 10 -1
	$(DRAW_PATH)/draw_graph.out -fname tournament_4_2 -directed -nb_V 4 -E 0 2 5 6 8 10 -1
	$(DRAW_PATH)/draw_graph.out -fname tournament_4_3 -directed -nb_V 4 -E 0 2 5 6 8 11 -1
	mpost tournament_4_0.mp
	mpost tournament_4_1.mp
	mpost tournament_4_2.mp
	mpost tournament_4_3.mp
	cp tournament_4_0.1 tournament_4_0.eps
	cp tournament_4_1.1 tournament_4_1.eps
	cp tournament_4_2.1 tournament_4_2.eps
	cp tournament_4_3.1 tournament_4_3.eps
	/sw/bin/convert -density 300x300 -trim tournament_4_0.eps tournament_4_0.png
	/sw/bin/convert -density 300x300 -trim tournament_4_1.eps tournament_4_1.png
	/sw/bin/convert -density 300x300 -trim tournament_4_2.eps tournament_4_2.png
	/sw/bin/convert -density 300x300 -trim tournament_4_3.eps tournament_4_3.png


draw4:
	$(DRAW_PATH)/draw_graph.out -fname petersen -nb_V 10 -E 0 1 2 11 12 20 21 28 29 31 33 36 38 41 42 -1
	mpost petersen.mp
	cp petersen.1 petersen.eps
	/sw/bin/convert -density 300x300 -trim petersen.eps petersen.png




