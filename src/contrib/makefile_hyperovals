# Jan 2, 2019: 1 min 58 sec on Mac


# the hyperovals in PG(2,16):

18_2:
	- mkdir ARCS_16_2
	$(ARCS_PATH)/arcs_main.out -v 5 \
		-linear -PGGL 3 16 -end \
		-q 16 -d 2 -n 2 \
		-input_prefix ./ARCS_16_2/ \
		-output_prefix ./SYSTEMS/ \
		-solution_prefix ./SOLUTIONS/ \
		-base_fname arcs_q16_d2 \
		-starter \
		-starter_size 18 \
		-W -w
	cp ARCS_16_2/arcs_q16_d2_lvl_18 .

18_2_process:
	$(PROJECTIVE_SPACE_PATH)/canonical_form.out -v 2 \
		-q 16 -n 2 \
		-input \
		-file_of_points arcs_q16_d2_lvl_18 \
		-end \
		-classify_nauty \
		-save hyperovals_16 \
		-prefix hyperovals_16 \
		-latex 
	pdflatex hyperovals_16_classification.tex
	open hyperovals_16_classification.pdf



